#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 202601061012-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.pro
# @License       : WTFPL
# @ReadME        : notifympd --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Monday, Mar 15, 2021 13:59 EDT
# @File          : notifympd
# @Description   : Monitor MPD and send notifications for track changes
# @Changelog     : Refactored for self-contained operation
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Script variables
PROG="notifympd"
VERSION="202601061012-git"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Environment Detection
__get_os() {
  case "$(uname -s)" in
    Linux*) echo "linux" ;;
    Darwin*) echo "mac" ;;
    *BSD*) echo "bsd" ;;
    MINGW*|MSYS*|CYGWIN*) echo "windows" ;;
    *) echo "unknown" ;;
  esac
}

__is_remote() {
  [ -n "${SSH_CLIENT:-}" ] || [ -n "${SSH_TTY:-}" ] || [ -n "${SSH_CONNECTION:-}" ]
}

__has_display() {
  [ -n "${DISPLAY:-}" ] || [ -n "${WAYLAND_DISPLAY:-}" ]
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Core helper functions
__cmd_exists() { command -v "$1" >/dev/null 2>&1; }

__is_running() {
  local proc="$1"
  case "$(__get_os)" in
    mac) pgrep -x "$proc" >/dev/null 2>&1 ;;
    windows) tasklist 2>/dev/null | grep -qi "$proc" ;;
    *) pgrep -x "$proc" >/dev/null 2>&1 || pgrep -f "$proc" >/dev/null 2>&1 ;;
  esac
}

__printf_color() {
  local color="${2:-0}"
  printf "\033[0;%sm%s\033[0m\n" "$color" "$1"
}
__printf_red() { __printf_color "$1" "31"; }
__printf_green() { __printf_color "$1" "32"; }
__printf_yellow() { __printf_color "$1" "33"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Smart notifications
__notifications() {
  local title="$1" msg="$2"

  # Remote/no display - just print to stderr
  if __is_remote || ! __has_display; then
    printf "[%s] %s\n" "$title" "$msg" >&2
    return 0
  fi

  # GUI notifications based on OS
  case "$(__get_os)" in
    mac)
      osascript -e "display notification \"$msg\" with title \"$title\"" 2>/dev/null && return 0
      ;;
    linux|bsd)
      if __cmd_exists notify-send; then
        notify-send "$title" "$msg" 2>/dev/null && return 0
      fi
      ;;
    windows)
      if __cmd_exists powershell.exe; then
        powershell.exe -Command "Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('$msg', '$title')" 2>/dev/null && return 0
      fi
      ;;
  esac

  # Fallback
  printf "[%s] %s\n" "$title" "$msg" >&2
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Version and help
__version() { echo "$PROG $VERSION"; }

__help() {
  cat <<EOF
$PROG $VERSION - Monitor MPD and send notifications for track changes

Usage: $PROG [options]

Options:
  -v, --version    Show version
  -h, --help       Show this help

Environment:
  MPDSERVER        MPD server hostname (default: localhost)
  MPDSERVER_PORT   MPD server port (default: 6600)

Notes:
  This script runs as a daemon and monitors MPD for track changes.
  When a new track starts playing, it sends a desktop notification
  with the artist, title, and album art (if available).

  Requires 'mpc' and 'notifyart' to be installed.
EOF
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  local exitCode=0

  # Parse options
  case "${1:-}" in
    -v|--version) __version; exit 0 ;;
    -h|--help) __help; exit 0 ;;
  esac

  # Required app check
  if ! __cmd_exists mpc; then
    __printf_red "Error: mpc is required but not installed"
    exit 1
  fi

  if ! __cmd_exists notifyart; then
    __printf_yellow "Warning: notifyart is not available, using basic notifications"
  fi

  # Begin main app
  local mpdserver="${MPDSERVER:-localhost}"
  local mpdserverport="${MPDSERVER_PORT:-6600}"
  local artist album title oldartist oldtitle

  __printf_green "Starting MPD notification daemon..."
  __printf_yellow "Connecting to $mpdserver:$mpdserverport"

  while true; do
    # Parse current track info
    artist=$(mpc -h "$mpdserver" -p "$mpdserverport" current 2>/dev/null | sed 's# - #: #g' | awk -F": " '{print $1}')
    title=$(mpc -h "$mpdserver" -p "$mpdserverport" current 2>/dev/null | sed 's# - #: #g' | awk -F": " '{print $2}')
    album=$(mpc -h "$mpdserver" -p "$mpdserverport" current 2>/dev/null | sed 's# - #: #g' | awk -F": " '{print $3}')

    # Check if track has changed
    if [[ "$artist" != "$oldartist" ]] || [[ "$title" != "$oldtitle" ]]; then
      if [ -n "$artist" ] && [ -n "$title" ]; then
        if __cmd_exists notifyart; then
          notifyart "$artist" "$title" "$album"
        else
          __notifications "$title" "$artist"
        fi
      fi
      oldartist="$artist"
      oldtitle="$title"
    fi

    sleep 2
  done

  return "$exitCode"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute
main "$@"
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
