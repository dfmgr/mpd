# @Created       : Monday, Mar 15, 2021 13:54 EDT
# @File          : mpdd
# @Description   : Display mpd status in terminal
# @Changelog     : Refactored for self-contained operation
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Script variables
PROG="mpdd"
VERSION="202601061012-git"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Environment Detection
__get_os() {
  case "$(uname -s)" in
    Linux*) echo "linux" ;;
    Darwin*) echo "mac" ;;
    *BSD*) echo "bsd" ;;
    MINGW*|MSYS*|CYGWIN*) echo "windows" ;;
    *) echo "unknown" ;;
  esac
}

__is_remote() {
  [ -n "${SSH_CLIENT:-}" ] || [ -n "${SSH_TTY:-}" ] || [ -n "${SSH_CONNECTION:-}" ]
}

__has_display() {
  [ -n "${DISPLAY:-}" ] || [ -n "${WAYLAND_DISPLAY:-}" ]
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Core helper functions
__cmd_exists() { command -v "$1" >/dev/null 2>&1; }

__is_running() {
  local proc="$1"
  case "$(__get_os)" in
    mac) pgrep -x "$proc" >/dev/null 2>&1 ;;
    windows) tasklist 2>/dev/null | grep -qi "$proc" ;;
    *) pgrep -x "$proc" >/dev/null 2>&1 || pgrep -f "$proc" >/dev/null 2>&1 ;;
  esac
}

__printf_color() {
  local color="${2:-0}"
  printf "\033[0;%sm%s\033[0m\n" "$color" "$1"
}
__printf_red() { __printf_color "$1" "31"; }
__printf_green() { __printf_color "$1" "32"; }
__printf_yellow() { __printf_color "$1" "33"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Smart notifications
__notifications() {
  local title="$1" msg="$2"

  # Remote/no display - just print to stderr
  if __is_remote || ! __has_display; then
    printf "[%s] %s\n" "$title" "$msg" >&2
    return 0
  fi

  # GUI notifications based on OS
  case "$(__get_os)" in
    mac)
      osascript -e "display notification \"$msg\" with title \"$title\"" 2>/dev/null && return 0
      ;;
    linux|bsd)
      if __cmd_exists notify-send; then
        notify-send "$title" "$msg" 2>/dev/null && return 0
      fi
      ;;
    windows)
      if __cmd_exists powershell.exe; then
        powershell.exe -Command "Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('$msg', '$title')" 2>/dev/null && return 0
      fi
      ;;
  esac

  # Fallback
  printf "[%s] %s\n" "$title" "$msg" >&2
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Version and help
__version() { echo "$PROG $VERSION"; }

__help() {
  local cachefile="$HOME/.cache/mpdd"
  cat <<EOF
$PROG $VERSION - Display mpd status in terminal

Usage: $PROG [options]

Options:
  -v, --version    Show version
  -h, --help       Show this help

Environment:
  MPDSERVER        MPD server hostname (default: localhost)
  MPDSERVER_PORT   MPD server port (default: 6600)

Notes:
  You can stop the program by running:
    touch ${cachefile}_kill
EOF
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  local exitCode=0
  local mpd_song mpdserver mpdserverport cachefile

  cachefile="$HOME/.cache/mpdd"
  mpdserver="${MPDSERVER:-localhost}"
  mpdserverport="${MPDSERVER_PORT:-6600}"

  # Internal function for mpc commands
  mpd_cli() { mpc -h "$mpdserver" -p "$mpdserverport" "$@"; }

  # Parse options
  case "${1:-}" in
    -v|--version) __version; exit 0 ;;
    -h|--help) __help; exit 0 ;;
  esac

  # Required app check
  if ! __cmd_exists mpc; then
    __printf_red "Error: mpc is required but not installed"
    exit 1
  fi

  # Begin main app
  [[ -f "${cachefile}_kill" ]] && rm -Rf "${cachefile}_kill"

  while sleep 1; do
    [[ -f "${cachefile}_kill" ]] && break
    mpd_song="$(mpd_cli status &>/dev/null && mpd_cli current || break)"
    if [[ -n "$mpd_song" ]]; then
      printf '%s\n' "$mpd_song" >"$cachefile"
      printf '\e[s\e[0;\%s\e[K\e[u' "$mpd_song"
    else
      exitCode=1
    fi
  done &

  trap '[[ -f "$cachefile" ]] && rm -Rf "$cachefile" || true' EXIT

  return "$exitCode"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute
main "$@"
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
