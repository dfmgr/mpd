# @File          : getart
# @Description   : Returns album art for the "artist - album" input string
# @Changelog     : Refactored for self-contained operation
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Script variables
PROG="getart"
VERSION="202601061012-git"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Environment Detection
__get_os() {
  case "$(uname -s)" in
    Linux*) echo "linux" ;;
    Darwin*) echo "mac" ;;
    *BSD*) echo "bsd" ;;
    MINGW*|MSYS*|CYGWIN*) echo "windows" ;;
    *) echo "unknown" ;;
  esac
}

__is_remote() {
  [ -n "${SSH_CLIENT:-}" ] || [ -n "${SSH_TTY:-}" ] || [ -n "${SSH_CONNECTION:-}" ]
}

__has_display() {
  [ -n "${DISPLAY:-}" ] || [ -n "${WAYLAND_DISPLAY:-}" ]
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Core helper functions
__cmd_exists() { command -v "$1" >/dev/null 2>&1; }

__is_running() {
  local proc="$1"
  case "$(__get_os)" in
    mac) pgrep -x "$proc" >/dev/null 2>&1 ;;
    windows) tasklist 2>/dev/null | grep -qi "$proc" ;;
    *) pgrep -x "$proc" >/dev/null 2>&1 || pgrep -f "$proc" >/dev/null 2>&1 ;;
  esac
}

__printf_color() {
  local color="${2:-0}"
  printf "\033[0;%sm%s\033[0m\n" "$color" "$1"
}
__printf_red() { __printf_color "$1" "31"; }
__printf_green() { __printf_color "$1" "32"; }
__printf_yellow() { __printf_color "$1" "33"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Smart notifications
__notifications() {
  local title="$1" msg="$2"

  # Remote/no display - just print to stderr
  if __is_remote || ! __has_display; then
    printf "[%s] %s\n" "$title" "$msg" >&2
    return 0
  fi

  # GUI notifications based on OS
  case "$(__get_os)" in
    mac)
      osascript -e "display notification \"$msg\" with title \"$title\"" 2>/dev/null && return 0
      ;;
    linux|bsd)
      if __cmd_exists notify-send; then
        notify-send "$title" "$msg" 2>/dev/null && return 0
      fi
      ;;
    windows)
      if __cmd_exists powershell.exe; then
        powershell.exe -Command "Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('$msg', '$title')" 2>/dev/null && return 0
      fi
      ;;
  esac

  # Fallback
  printf "[%s] %s\n" "$title" "$msg" >&2
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# URL encoding helper
__urlencode() {
  local string="$1"
  local strlen=${#string}
  local encoded=""
  local pos c o
  for ((pos = 0; pos < strlen; pos++)); do
    c=${string:$pos:1}
    case "$c" in
      [-_.~a-zA-Z0-9]) o="$c" ;;
      *) printf -v o '%%%02x' "'$c" ;;
    esac
    encoded+="$o"
  done
  echo "$encoded"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Online check
__am_i_online() {
  local test_host="${1:-1.1.1.1}"
  if __cmd_exists ping; then
    ping -c 1 -W 2 "$test_host" >/dev/null 2>&1
  elif __cmd_exists curl; then
    curl -s --connect-timeout 2 "http://$test_host" >/dev/null 2>&1
  else
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Version and help
__version() { echo "$PROG $VERSION"; }

__help() {
  cat <<EOF
$PROG $VERSION - Returns album art for the "artist - album" input string

Usage: $PROG [options] "artist - album"

Options:
  -v, --version    Show version
  -h, --help       Show this help

Environment:
  ARTDIR           Directory to store album art (default: ~/.cache/albumart)
  MPDSERVER        MPD server hostname (default: localhost)

Examples:
  $PROG "Pink Floyd - The Wall"
  $PROG "Led Zeppelin - IV"
EOF
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  local exitCode=0

  # Parse options
  case "${1:-}" in
    -v|--version) __version; exit 0 ;;
    -h|--help) __help; exit 0 ;;
  esac

  # Required app check
  if ! __cmd_exists wget; then
    __printf_red "Error: wget is required but not installed"
    exit 1
  fi

  # Begin main app
  local mpdserver="${MPDSERVER:-localhost}"
  [[ -z "$ARTDIR" ]] && ARTDIR="$HOME/.cache/albumart"
  [[ -d "$ARTDIR" ]] || mkdir -p "$ARTDIR"

  local mpccurrent artfile
  mpccurrent="$(echo "$@" | sed -r 's/(\[|\]|\,)//g')"

  if [[ -z "$mpccurrent" ]]; then
    __printf_yellow "Usage: $PROG \"artist - album\""
    exit 1
  fi

  artfile=$(find "$ARTDIR" -iname "${mpccurrent}*" 2>/dev/null | head -1)

  [[ -z "$artfile" ]] && __am_i_online && {
    local useragent='Mozilla/5.0 (X11; Ubuntu; Linux i686; rv:31.0) Gecko/20100101 Firefox/31.0'
    local link imagelink ext imagepath imagelinks
    link="www.google.com/search?q=$(__urlencode "$mpccurrent")\&tbm=isch"
    imagelinks=$(timeout 10s wget -e robots=off --user-agent "$useragent" -o /dev/null -qO - "$link" 2>/dev/null |
      sed 's/</\n</g' | grep "ou\":\"http" | sed -nr 's/.*ou\":\"([^"]+).*/\1/p')
    for imagelink in $imagelinks; do
      imagelink=$(echo "$imagelink" | sed -nr 's/(.*\.(jpg|jpeg|png)).*/\1/p')
      ext=$(echo "$imagelink" | sed -nr 's/.*(\.(jpg|jpeg|png)).*/\1/p')
      imagepath="${ARTDIR}/${mpccurrent}${ext}"
      timeout 10s wget --max-redirect 0 -o /dev/null -qO "$imagepath" "${imagelink}" 2>/dev/null
      [[ -s "$imagepath" ]] && break
      rm -f "$imagepath" 2>/dev/null
    done
    artfile=$(find "$ARTDIR" -iname "${mpccurrent}*" 2>/dev/null | head -1)
  }

  echo "$artfile"
  return "$exitCode"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute
main "$@"
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
